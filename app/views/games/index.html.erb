<h1>Game Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Release date</th>
      <th>Players</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr class="game_listing">
        <td><%= game.title %></td>
        <td><%= game.release_date %></td>
        <td><%= game.players %></td>
        <td><%= game.price %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
